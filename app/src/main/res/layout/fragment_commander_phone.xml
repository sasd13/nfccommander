<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/fragment_commander_phone_textview_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_commander_phone_textview_number" />

        <EditText
            android:id="@+id/fragment_commander_phone_edittext_number"
            android:layout_width="@dimen/fragment_commander_phone_edittext_width"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_commander_phone_edittext_number_hint"
            android:inputType="phone"/>

    </LinearLayout>

</FrameLayout>
