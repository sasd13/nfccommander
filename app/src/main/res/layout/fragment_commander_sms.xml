<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/fragment_commander_sms_textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_commander_sms_textview_message" />

        <EditText
            android:id="@+id/fragment_commander_sms_edittext_phonenumber"
            android:layout_width="@dimen/fragment_commander_sms_edittext_phonenumber_width"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_commander_phone_edittext_phonenumber_hint"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/fragment_commander_sms_edittext_message"
            android:layout_width="@dimen/fragment_commander_sms_edittext_message_width"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_commander_sms_edittext_message_hint"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/fragment_commander_sms_button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_submit"/>

    </LinearLayout>

</FrameLayout>
